<h1>React Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_path %>

<% @react_portfolio_items.each do |react_portfolio_item| %>
  <p><%= link_to react_portfolio_item.title, portfolio_show_path(react_portfolio_item.id) %></p>
  <p><%= react_portfolio_item.subtitle %></p>
  <p><%= react_portfolio_item.body %></p>
  <%= image_tag react_portfolio_item.thumb_image unless react_portfolio_item.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(react_portfolio_item.id) %>
  <%= link_to 'Delete Portfolio Item', react_portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
